<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.elotouch.flirone">
    <!-- some hw might not support Usb Host mode so it's recommended to add this -->
    <uses-feature android:name="android.hardware.usb.host" />

    <application
        android:name=".FlirCameraApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon_elo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_icon_elo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CalibrateActivity"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FlirCameraActivity"></activity>
    </application>

</manifest>